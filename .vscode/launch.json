	"version": "0.2.0",
	"configurations": [
		{
			"name": "C (gdb) Launch",
			"type": "cppdbg",
			"request": "launch",
			"program": "/home/miguel/42Cursus/pipex/pipex",
			"args": ["Makefile", "sad","dwd", "Makefile"],
			"stopAtEntry": true,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"miDebuggerPath": "/usr/bin/gdb",
			"preLaunchTask": "gcc build active file",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			]
		}
	]
